<h1>注文履歴詳細</h1>
<div>
  <span>購入者</span>
  <span><%= @order.name %></span>
</div>
<div>
  <span>注文日</span>
  <span><%= @order.introduction %></span>
</div>
<div>
  <span>配送先</span>
  <span><%= @order.genre_id %></span>
</div>
<div>
  <span>支払方法</span>
  <span><%= @order.genre_id %></span>
</div>
<div>
  <span>注文ステータス</span>
  <span><%= @order.status %></span>
</div>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <p><%= order.name %></p>
        </td>
        <td>
          <p><%= order.billing_amount %></p>
        </td>
        <td>
          <p><%= order.amouunt %></p>
        </td>
        <td>
          <p><%= order.amount %>*<%= order.amouunt %></p>
        </td>
        <td>
          <p><%= order.making_status %></p>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>