<h1>ジャンル一覧・追加</h1>
<%= form_with model do |f| %>
<div>
  <span>ジャンル名</span>
  <span><%= f.text_field :name %></span>
  <span><%= f.submit '新規登録' %></span>
</div>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <p><%= genre.name %></p>
        </td>
        <td>
          <p><%= link_to "編集する", edit_admin_genre_path(genre.id) %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>